package cl.FelipePardo;

/**
 *
 * @author Felipe Pardo
 */
public class Pizza {
    //01 crear atributos de la clase
    private String nombre, masa, tamano;
    
    
    //02 crear metodos customer
    public void preparar(){
        System.out.println("en estos momentos estamos preparando tu pizza");
    }
    public void calentar(){
        System.out.println("en estos momentos se esta calentando tu pizza");
    
    }

    public Pizza() {
        System.out.println("Hola soy el constructor sin parametros");
    }

    public Pizza(String nombre, String masa, String tamano) {
        this.nombre = nombre;
        this.masa = masa;
        this.tamano = tamano;
        System.out.println("Hola soy el constructor con parametros");
    }

    public String getNombre() {
        return nombre;
    }
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////




