Scanner scanner = new Scanner(System.in);
        System.out.println("Ingrese Numero: ");
        int numero = scanner.nextInt();
        String estacion= "";
        if(numero == 1 || numero== 2 ||numero == 12){
            estacion= "Verano";
        System.out.println("El numero que ingresó , coincide con la estacion de Verano");
        }else if(numero == 3 || numero== 4 ||numero == 5){
            estacion= "Otoño";
        System.out.println("El numero que ingresó , coincide con la estacion de Otoño");
        }else if(numero == 6 || numero== 7 ||numero == 8){
            estacion= "Invierno";
        System.out.println("El numero que ingresó , coincide con la estacion de Invierno");
        }else if(numero == 9 || numero== 10 ||numero == 11){
            estacion= "Primavera";
        System.out.println("El numero que ingresó , coincide con la estacion de Primavera");
        }else{
            System.out.println("El numero ingraso no pertenece a ninguna estacion del año");
    
        }
        }  
        }
