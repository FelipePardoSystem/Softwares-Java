package condiciones;

import java.util.Scanner;

/**
 *
 * @author CETECOM
 */
public class CONDICIONES {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
    Scanner scanner = new Scanner(System.in);
        System.out.println("Ingrese su edad: ");
    int edad = scanner.nextInt();
    String clasificacion ="";
 
    if(edad > 0 && edad <7){
       clasificacion = "Clasifiacion : TE";
            System.out.println("Clasificacion" + clasificacion );
            System.out.println("Su edad es: "+ edad+ " a単os");
    }else if(edad >=7 && edad <14) {
    clasificacion = "Clasifiacion : TE+14";
             System.out.println("Clasificacion" + clasificacion );
             System.out.println("Su edad es: "+ edad+ " a単os");
    }else if (edad >= 18 && edad <= 30){
    clasificacion = "Clasifiacion : TE+18 ";
             System.out.println("Clasificacion" + clasificacion );
             System.out.println("Su edad es: "+ edad+ " a単os");
    }else{
            System.out.println("No existe ese rango para edad");
            System.out.println("Su edad es: "+ edad+ " a単os");
}
    }}
    
              
